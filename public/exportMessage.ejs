<div class="modal-dialog modal-lg" ng-init="open()">
    <script type="text/ng-template" id="modal.ejs">
        <div class="modal-content" ng-controller="ExportController">
            <div class="modal-header">
                <h5 class="model-title">{{fileType}} file Download - Started</h5>
            </div>
            <div class="modal-body exportModal">
                <div class="wrapper wrapper-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="center">
                               <h2>Please wait while the {{fileType}} file is being generated</h2>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12 text-right">
                        <button class="btn btn-primary button-mode" ng-click="closeExport();">OK
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </script>
</div>






