<div class="modal-content" ng-init="selectedFusableWidgets()" ng-cloak>
    <button type="button" class="overlayCloseButton" ng-click="dismiss()">
        <i class="fa fa-times fa-lg" aria-hidden="true"></i>
    </button>
    <div class="modal-header">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="model-title">Fusion Widget Settings</h3>
            </div>
        </div>
    </div>

    <div class="row"  ng-cloak style="margin: 0px;">
        <div class="modal-body widget-body">
            <div class="wrapper wrapper-content" ng-show="fusionView === false">
                <div class="row" style="margin: 0px">
                    <div class="spiner-example">
                        <div class="sk-spinner sk-spinner-double-bounce">
                            <div class="sk-double-bounce1"></div>
                            <div class="sk-double-bounce2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="wrapper wrapper-content" ng-show="fusionView === true">
                <div class="row" style="margin: 0px">
                    <div class="col-sm-4 fuse-widgets panel panel-default" style="margin-left: 34px;">
                        <label for="availableWidgets">Available Dashboard Widgets</label>
                        <select size="15" class="form-control select-widget scrollbar scroller" multiple ng-model="availableWidgets" ng-options="widgets as widgets.label for widgets in widgetsList"></select>
                    </div>
                    <div class="col-sm-3 pull-push-widgets">
                        <div>
                            <button class="btn btn-white button-widget" style="padding: 6px 6px;" ng-click="pushSelectedWidgets(availableWidgets,widgetsList,selectedWidgetsList)">Add <i class="fa fa-angle-right arrowColors" aria-hidden="true"></i></button>
                        </div>
                        <div>
                            <button class="btn btn-white button-widget" style="padding: 6px 6px;" ng-click="pushSelectedWidgets(selectedWidgets,selectedWidgetsList,widgetsList)"><i class="fa fa-angle-left arrowColors" aria-hidden="true"></i> Remove</button>
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-4 fuse-widgets panel panel-default">
                        <label for="availableWidgets">Widgets to be fused</label>
                        <select size="15" multiple class="form-control select-widget scrollbar scroller" multiple ng-model="selectedWidgets" ng-options="selectedWidgets as selectedWidgets.label for selectedWidgets in selectedWidgetsList"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="row" style="margin: 10px 0px 20px 0px;">
                <div class="col-lg-12 text-right">
                    <a ng-click="dismiss()" class="btn btn-primary button-mode" tabindex="-1"><i class="glyphicon glyphicon-remove favigon-img"></i>Cancel</a>
                    <a ng-click="createCustomFusionWidget()" class="btn btn-primary button-mode" tabindex="-1"><i class="glyphicon glyphicon-ok favigon-img"></i>Save </a>
                </div>
            </div>
        </div>
    </div>
</div>