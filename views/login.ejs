<html>
<head>
    <title>Datapoolt | Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../../image/Favicon.png">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <script src="/js/modernizr.custom.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <script src="/js/hideShowPassword.min.js"></script>
    <script>
        $(function() {
            // Example 1
            $('#password-1').hideShowPassword({
                // Creates a wrapper and toggle element with minimal styles.
                innerToggle: true,
                // Makes the toggle functional in touch browsers without
                // the element losing focus.
                touchSupport: Modernizr.touch
            });
        });
    </script>



</head>

<body class="gray-bg">

<div class="loginColumns animated fadeInDown">
    <div class="row">

        <div class="col-md-6">
            <a href="../../" ><img src="/image/logo.png"></a>
            <h2 class="font-bold">Welcome to Datapoolt</h2>

            <p>
                Login and connect multiple marketing channels into one beautiful dashboard
            </p>

            <p>
                Compare performance across marketing platforms and understand the cause and effect of each of your results
            </p>

            <p>
                Understand and refine strategy across channels, set alerts, export reports and much more
            </p>


        </div>
        <div class="col-md-6">
            <div id="animation_box" class="animated pulse">
                <div class="ibox-content ">
                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>

                    <% } %>
                    <form class="m-t" role="form" action="/api/v1/login" method="post">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Username" name="email" required="">
                        </div>
                        <div class="form-group">
                            <input name="password" class="login-field login-field-password form-control" id="password-1" type="password" required="" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
                        <a href="#">
                           <!-- <small>Forgot password?</small>-->
                        </a>

                        <!--<p class="text-muted text-center">-->
                            <!--<small>Do not have an account?</small>-->
                        <!--</p>-->
                        <!--<a class="btn btn-sm btn-white btn-block" href="/api/v1/signup">Create an account</a>-->
                    </form>

                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            Copyright &copy; Datapoolt
        </div>
        <div class="col-md-6 text-right copy-right">
            <small>&copy; 2015-2016</small>
        </div>
    </div>
</div>

<!-- Mainly scripts -->
<script>
     var elementExists = document.getElementsByClassName("alert-danger").length;
     if(elementExists==1){
        var el =  document.getElementById("animation_box");
         el.classList.remove("pulse");
         el.classList.add("shake");
         console.log( document.getElementById("animation_box".className));

     }

</script>

</body>

</html>
